{
  "extends": "@vue/tsconfig/tsconfig.json",
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "preserve",
    "allowJs": true,
    "types": ["vue"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "env.d.ts",
    "app/**/*.vue",
    "components/**/*.vue",
    "pages/**/*.vue",
    "layouts/**/*.vue",
    "composables/**/*",
    "plugins/**/*",
    "server/**/*",
    "utils/**/*",
    ".nuxt/**/*.ts",
    ".nuxt/**/*.d.ts",
    "nuxt.d.ts"
  ],
  "vueCompilerOptions": {
    "strictTemplates": true
  }
}
